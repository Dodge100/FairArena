{
  "name": "fairarena",
  "version": "1.0.0",
  "description": "This is FairArena your Hackathon partner",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "Backend/src/**/*.{ts,js}": [
      "prettier --write",
      "pnpm --filter backend run lint"
    ],
    "Frontend/src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "pnpm --filter fairarena run lint"
    ]
  },
  "author": "Saksham-Goel1107",
  "packageManager": "pnpm@10.30.1"
}
