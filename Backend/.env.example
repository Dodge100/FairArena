# Port number for the server to listen on
# Default: 3000
PORT=3000

# Node environment
# Options: development, production, test
# Set to production for live deployments
NODE_ENV=development

############################ Arcjet Keys ############################

# Arcjet API key for rate limiting and DDoS protection
# Get from: https://app.arcjet.com/
# Required for production
ARCJET_KEY=your_arcjet_key_here

# Arcjet environment
# Options: development, production
# Should match NODE_ENV
ARCJET_ENV=development

############################ Clerk Keys ############################

# Clerk publishable key for client-side auth
# Get from: https://dashboard.clerk.com/
# Required for authentication
# Starts with pk_
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Clerk secret key for server-side auth
# Get from: https://dashboard.clerk.com/
# Required for authentication
# Starts with sk_
# Keep this secret and never commit to version control
CLERK_SECRET_KEY=your_clerk_secret_key_here


# Clerk webhook secret for verifying webhooks
# Get from: https://dashboard.clerk.com/
# Required for webhook verification
# Starts with whsec_
CLERK_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

############################ Database Url ############################

# Get this from your database provider like Supabase, Neon, etc.
# Example for PostgreSQL:

DATABASE_URL="postgresql://neondb_owner:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Read-only database replicas for load balancing (round-robin)
# These should point to read-only replicas of your primary database
# If you don't have replicas, use the same DATABASE_URL for both
DATABASE_URL_READ_ONLY_1="postgresql://neondb_owner:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
DATABASE_URL_READ_ONLY_2="postgresql://neondb_owner:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

############################ Inngest Keys ############################

# Inngest signing key for webhook verification
# Get from: https://app.inngest.com/
# Required for event processing
INNGEST_SIGNING_KEY=sign_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Inngest event key for sending events
# Get from: https://app.inngest.com/
# Required for event processing
INNGEST_EVENT_KEY=event_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

############################ Upstash Redis ############################
# Upstash Redis REST URL
# Get from: https://console.upstash.com/
# Required for rate limiting and caching
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io

# Upstash Redis REST Token
# Get from: https://console.upstash.com/
# Required for rate limiting and caching
UPSTASH_REDIS_REST_TOKEN=your-redis-token

############################ Google reCAPTCHA ############################

# Google reCAPTCHA v2 Site Key
# Get from: https://www.google.com/recaptcha/admin
# Required for CAPTCHA verification
# Starts with 6L
GOOGLE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Google reCAPTCHA v2 Secret Key
# Get from: https://www.google.com/recaptcha/admin
# Required for server-side CAPTCHA verification
# Keep this secret and never commit to version control
GOOGLE_RECAPTCHA_SECRET=your_recaptcha_secret_key_here

############################ Groq AI ############################

# Groq API Key for AI-powered support ticket classification
# Get from: https://console.groq.com/
# Required for automatic ticket classification (type, severity, description)
# If not set, system will use fallback keyword-based classification
GROQ_API_KEY=your_groq_api_key_here
