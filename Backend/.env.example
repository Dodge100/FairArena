# Port number for the server to listen on
# Default: 3000
PORT=3000

# Node environment
# Options: development, production, test
# Set to production for live deployments
NODE_ENV=development

############################ Arcjet Keys ############################

# Arcjet API key for rate limiting and DDoS protection
# Get from: https://app.arcjet.com/
# Required for production
ARCJET_KEY=your_arcjet_key_here

# Arcjet environment
# Options: development, production
# Should match NODE_ENV
ARCJET_ENV=development

############################ Clerk Keys ############################

# Clerk publishable key for client-side auth
# Get from: https://dashboard.clerk.com/
# Required for authentication
# Starts with pk_
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Clerk secret key for server-side auth
# Get from: https://dashboard.clerk.com/
# Required for authentication
# Starts with sk_
# Keep this secret and never commit to version control
CLERK_SECRET_KEY=your_clerk_secret_key_here

############################ Database Url ############################

# Get this from your database provider like Supabase, Neon, etc.
# Example for PostgreSQL:

DATABASE_URL="postgresql://neondb_owner:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
