generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String                  @id @default(cuid())
  userId                String                  @unique
  email                 String                  @unique
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  Logs                  Logs[]
  notifications         Notification[]
  organizationFollowers OrganizationFollowers[]
  organizationStars     OrganizationStars[]
  OrganizationUserRole  OrganizationUserRole[]
  payments              Payment[]
  creditTransactions    CreditTransaction[]
  profile               Profile?
  isDeleted             Boolean                 @default(false)
  deletedAt             DateTime?
  profileStars          ProfileStars[]
  projectUserRoles      ProjectUserRole[]
  reports               Report[]
  teamUserRoles         TeamUserRole[]
  userOrganizations     UserOrganization[]
  projectMemberships    UserProject[]
  teamMemberships       UserTeam[]

  @@index([userId])
  @@index([email])
}

model Plan {
  id          String    @id @default(cuid())
  name        String    @unique
  planId      String    @unique  // e.g., "basic_plan", "business_plan"
  amount      Int                // Amount in paisa
  currency    String    @default("INR")
  credits     Int                // Credits awarded after payment
  description String?   @db.Text
  features    String[]           // Array of feature strings
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  payments    Payment[]

  @@index([planId])
  @@index([isActive])
  @@index([name])
}

model Payment {
  id                   String              @id @default(cuid())
  userId               String
  razorpayOrderId      String              @unique
  razorpayPaymentId    String?             @unique
  razorpaySignature    String?
  razorpayInvoiceId    String?             @unique
  invoiceUrl           String?
  planId               String
  planName             String
  amount               Int                 // Amount in paisa
  currency             String              @default("INR")
  credits              Int
  status               PaymentStatus       @default(PENDING)
  paymentMethod        String?
  paymentContact       String?
  receipt              String?
  notes                Json?               // Store razorpay order notes
  ipAddress            String?
  userAgent            String?             @db.Text
  idempotencyKey       String?             @unique
  webhookProcessed     Boolean             @default(false)
  webhookProcessedAt   DateTime?
  failureReason        String?             @db.Text
  refundId             String?             @unique
  refundAmount         Int?
  refundReason         String?             @db.Text
  refundedAt           DateTime?
  createdAt            DateTime            @default(now())
  completedAt          DateTime?
  user                 User                @relation(fields: [userId], references: [userId], onDelete: Cascade)
  plan                 Plan                @relation(fields: [planId], references: [planId], onDelete: SetNull)
  webhookEvents        PaymentWebhookEvent[]
  creditTransactions   CreditTransaction[]

  @@index([userId])
  @@index([razorpayOrderId])
  @@index([razorpayPaymentId])
  @@index([razorpayInvoiceId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([idempotencyKey])
  @@index([webhookProcessed])
  @@index([refundId])
  @@index([planId])
}

model CreditTransaction {
  id              String                @id @default(cuid())
  userId          String
  paymentId       String?
  amount          Int                   // Positive for credit, negative for debit
  balance         Int                   // Running balance after this transaction
  type            CreditTransactionType
  description     String
  metadata        Json?                 // Additional context (planId, orderId, etc)
  createdAt       DateTime              @default(now())
  user            User                  @relation(fields: [userId], references: [userId], onDelete: Cascade)
  payment         Payment?              @relation(fields: [paymentId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([paymentId])
  @@index([type])
  @@index([createdAt])
  @@index([userId, createdAt])
}

model PaymentWebhookEvent {
  id                  String   @id @default(cuid())
  paymentId           String?
  razorpayEventId     String?  @unique
  eventType           String
  payload             Json     // Full webhook payload
  signature           String?
  processed           Boolean  @default(false)
  processedAt         DateTime?
  errorMessage        String?  @db.Text
  retryCount          Int      @default(0)
  createdAt           DateTime @default(now())
  payment             Payment? @relation(fields: [paymentId], references: [id], onDelete: SetNull)

  @@index([paymentId])
  @@index([razorpayEventId])
  @@index([eventType])
  @@index([processed])
  @@index([createdAt])
  @@index([eventType, processed])
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum CreditTransactionType {
  PURCHASE           // Credits purchased via payment
  REFUND            // Credits refunded
  BONUS             // Promotional credits
  DEDUCTION         // Credits used/deducted
  ADJUSTMENT        // Manual adjustment by admin
  EXPIRY            // Credits expired
  TRANSFER_IN       // Credits transferred in
  TRANSFER_OUT      // Credits transferred out
}

model Profile {
  id                String         @id @default(cuid())
  userId            String         @unique
  firstName         String?
  lastName          String?
  bio               String         @db.VarChar(500)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  company           String?
  dateOfBirth       DateTime?
  education         String[]
  gender            gender?
  githubUsername    String?
  interests         String[]
  isPublic          Boolean        @default(false)
  jobTitle          String?
  languages         String[]
  linkedInProfile   String?
  location          String?
  phoneNumber       String?
  portfolioUrl      String?
  requireAuth       Boolean        @default(false)
  resumeUrl         String?
  skills            String[]
  trackViews        Boolean        @default(false)
  twitterHandle     String?
  yearsOfExperience Int?
  awards            String[]
  certifications    String[]
  experiences       String[]
  user              User           @relation(fields: [userId], references: [userId], onDelete: Cascade)
  profileStars      ProfileStars[]
  profileViews      ProfileView[]

  @@index([userId])
  @@index([isPublic])
  @@index([requireAuth])
  @@index([trackViews])
}

model Logs {
  id        String   @id @default(cuid())
  userId    String
  action    String
  level     level
  metadata  Json?
  createdAt DateTime @default(now())
  user      User    @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([level])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([action, createdAt])
}

model ProfileView {
  id           String   @id @default(cuid())
  profileId    String
  viewerUserId String
  viewerEmail  String
  viewerName   String?
  createdAt    DateTime @default(now())
  profile      Profile  @relation(fields: [profileId], references: [id])

  @@unique([profileId, viewerUserId])
  @@index([profileId])
  @@index([viewerUserId])
  @@index([viewerEmail])
  @@index([createdAt])
  @@index([profileId, createdAt])
}

model Organization {
  id                    String                   @id @default(cuid())
  name                  String                   @unique
  slug                  String                   @unique
  joinEnabled           Boolean                  @default(false)
  isPublic              Boolean                  @default(true)
  timezone              String?
  createdAt             DateTime                 @default(now())
  updatedAt             DateTime                 @updatedAt
  organizationAuditLogs OrganizationAuditLog[]
  organizationFollowers OrganizationFollowers[]
  inviteCodes           OrganizationInviteCode[]
  organizationProfile   OrganizationProfile?
  organizationRoles     OrganizationRole[]
  organizationStars     OrganizationStars[]
  organizationUserRoles OrganizationUserRole[]
  teams                 Team[]
  userOrganizations     UserOrganization[]

  @@index([name])
  @@index([slug])
  @@index([isPublic])
  @@index([joinEnabled])
  @@index([createdAt])
}

model OrganizationUserRole {
  id             String           @id @default(cuid())
  userId         String
  organizationId String
  roleId         String
  assignedAt     DateTime         @default(now())
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           OrganizationRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user           User             @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([userId, organizationId, roleId])
  @@index([userId])
  @@index([organizationId])
  @@index([roleId])
  @@index([organizationId, userId])
}

model UserOrganization {
  userId         String
  organizationId String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, organizationId])
  @@index([organizationId])
  @@index([createdAt])
}

model OrganizationRole {
  id                      String                   @id @default(cuid())
  organizationId          String
  roleName                String
  permissions             Json
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  organizationInviteCodes OrganizationInviteCode[]
  organization            Organization             @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationUserRoles   OrganizationUserRole[]

  @@unique([organizationId, roleName])
  @@index([organizationId])
  @@index([roleName])
}

model OrganizationInviteCode {
  id             String           @id @default(cuid())
  organizationId String
  code           String           @unique
  expiresAt      DateTime
  createdAt      DateTime         @default(now())
  createdBy      String
  email          String
  roleId         String
  used           Boolean          @default(false)
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           OrganizationRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([code])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
  @@index([roleId])
  @@index([organizationId, used, expiresAt])
}

model OrganizationProfile {
  id             String       @id @default(cuid())
  organizationId String       @unique
  description    String?
  website        String?
  logoUrl        String?
  bannerUrl      String?
  location       String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model Team {
  id              String         @id @default(cuid())
  name            String
  slug            String
  joinEnabled     Boolean        @default(false)
  visibility      Visibility     @default(INTERNAL)
  timezone        String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  organizationId  String
  inviteCodes     InviteCode[]
  projects        Project[]
  organization    Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  teamAuditLogs   TeamAuditLog[]
  teamProfile     TeamProfile?
  teamRoles       TeamRole[]
  teamUserRoles   TeamUserRole[]
  teamMemberships UserTeam[]

  @@unique([organizationId, name])
  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([name])
  @@index([slug])
  @@index([visibility])
  @@index([joinEnabled])
  @@index([createdAt])
  @@index([organizationId, visibility])
}

model TeamProfile {
  id          String   @id @default(cuid())
  teamId      String   @unique
  description String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
}

model InviteCode {
  id        String   @id @default(cuid())
  teamId    String
  code      String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  createdBy String
  email     String
  roleId    String
  used      Boolean  @default(false)
  role      TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([code])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
  @@index([roleId])
  @@index([teamId, used, expiresAt])
}

model TeamRole {
  id            String         @id @default(cuid())
  teamId        String
  roleName      String
  permissions   Json
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  inviteCodes   InviteCode[]
  team          Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamUserRoles TeamUserRole[]

  @@unique([teamId, roleName])
  @@index([teamId])
  @@index([roleName])
}

model ProjectRole {
  id                 String              @id @default(cuid())
  projectId          String
  roleName           String
  permissions        Json
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  projectInviteCodes ProjectInviteCode[]
  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectUserRoles   ProjectUserRole[]

  @@unique([projectId, roleName])
  @@index([projectId])
  @@index([roleName])
}

model TeamUserRole {
  id         String   @id @default(cuid())
  userId     String
  teamId     String
  roleId     String
  assignedAt DateTime @default(now())
  role       TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  team       Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([userId, teamId, roleId])
  @@index([userId])
  @@index([teamId])
  @@index([roleId])
  @@index([teamId, userId])
}

model UserTeam {
  userId    String
  teamId    String
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, teamId])
  @@index([teamId])
  @@index([createdAt])
}

model ProjectUserRole {
  id         String      @id @default(cuid())
  userId     String
  projectId  String
  roleId     String
  assignedAt DateTime    @default(now())
  project    Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role       ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([userId, projectId, roleId])
  @@index([userId])
  @@index([projectId])
  @@index([roleId])
  @@index([projectId, userId])
}

model UserProject {
  userId    String
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, projectId])
  @@index([projectId])
  @@index([createdAt])
}

model Project {
  id                 String              @id @default(cuid())
  teamId             String
  name               String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdBy          String
  updatedBy          String
  visibility         Visibility          @default(INTERNAL)
  joinEnabled        Boolean             @default(false)
  slug               String?
  team               Team                @relation(fields: [teamId], references: [id], onDelete: Cascade)
  projectAuditLogs   ProjectAuditLog[]
  inviteCodes        ProjectInviteCode[]
  projectRoles       ProjectRole[]
  projectUserRoles   ProjectUserRole[]
  projectMemberships UserProject[]
  projectProfile     projectProfile?

  @@unique([teamId, name])
  @@unique([teamId, slug])
  @@index([teamId])
  @@index([name])
  @@index([slug])
  @@index([visibility])
  @@index([joinEnabled])
  @@index([createdAt])
  @@index([teamId, visibility])
}

model projectProfile {
  id          String   @id @default(cuid())
  projectId   String   @unique
  description String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model ProjectInviteCode {
  id        String      @id @default(cuid())
  projectId String
  email     String?
  code      String      @unique
  roleId    String
  expiresAt DateTime
  used      Boolean     @default(false)
  createdAt DateTime    @default(now())
  createdBy String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role      ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([code])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
  @@index([projectId, used, expiresAt])
}

model OrganizationAuditLog {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  action         String
  level          level
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([userId])
  @@index([action])
  @@index([level])
  @@index([createdAt])
  @@index([organizationId, createdAt])
  @@index([organizationId, userId, createdAt])
}

model TeamAuditLog {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([userId])
  @@index([action])
  @@index([level])
  @@index([createdAt])
  @@index([teamId, createdAt])
  @@index([teamId, userId, createdAt])
}

model ProjectAuditLog {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@index([action])
  @@index([level])
  @@index([createdAt])
  @@index([projectId, createdAt])
  @@index([projectId, userId, createdAt])
}

model Report {
  id               String      @id @default(cuid())
  reporterId       String
  reportedEntityId String
  entityType       String
  reason           String
  details          String?
  createdAt        DateTime    @default(now())
  state            ReportState @default(QUEUED)
  reporter         User        @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  @@index([reporterId])
  @@index([reportedEntityId, entityType])
  @@index([state])
  @@index([createdAt])
  @@index([entityType, state])
}

model ProfileStars {
  id        String   @id @default(cuid())
  profileId String
  userId    String
  createdAt DateTime @default(now())
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([profileId, userId])
  @@index([profileId])
  @@index([userId])
  @@index([createdAt])
}

model OrganizationFollowers {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([userId])
  @@index([createdAt])
}

model OrganizationStars {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([userId])
  @@index([createdAt])
}

model Notification {
  id          String           @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String           @db.Text
  read        Boolean          @default(false)
  actionUrl   String?
  actionLabel String?
  metadata    Json?
  description String           @db.Text
  createdAt   DateTime         @default(now())
  readAt      DateTime?
  user        User             @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([type])
  @@index([createdAt])
  @@index([userId, read])
  @@index([userId, createdAt])
}

enum Visibility {
  PUBLIC
  PRIVATE
  INTERNAL
}

enum gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum level {
  INFO
  WARN
  CRITICAL
}

enum ReportState {
  QUEUED
  IN_REVIEW
  RESOLVED
  DISMISSED
  ESCALATED
}

enum NotificationType {
  SYSTEM
  MENTION
  INVITATION
  ACHIEVEMENT
  UPDATE
  REMINDER
  ALERT
  MESSAGE
  FOLLOW
  STAR
  COMMENT
  ANNOUNCEMENT
}
