generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                 @id @default(cuid())
  userId               String                 @unique
  email                String                 @unique
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  Logs                 Logs[]
  otps                 Otp[]
  userOrganizations    UserOrganization[]
  teamMemberships      UserTeam[]
  projectMemberships   UserProject[]
  teamUserRoles        TeamUserRole[]
  projectUserRoles     ProjectUserRole[]
  reports              Report[]
  profile              Profile?
  OrganizationUserRole OrganizationUserRole[]

  @@index([userId])
}

model Profile {
  id                String        @id @default(cuid())
  userId            String        @unique
  firstName         String?
  lastName          String?
  bio               String        @db.VarChar(500)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  company           String?
  dateOfBirth       DateTime?
  education         String[]
  gender            gender?
  githubUsername    String?
  interests         String[]
  isPublic          Boolean       @default(false)
  jobTitle          String?
  languages         String[]
  linkedInProfile   String?
  location          String?
  phoneNumber       String?
  portfolioUrl      String?
  requireAuth       Boolean       @default(false)
  resumeUrl         String?
  skills            String[]
  trackViews        Boolean       @default(false)
  twitterHandle     String?
  yearsOfExperience Int?
  awards            String[]
  certifications    String[]
  experiences       String[]
  user              User          @relation(fields: [userId], references: [userId], onDelete: Cascade)
  profileViews      ProfileView[]

  @@index([userId])
  @@index([isPublic])
}

model Otp {
  id        String   @id @default(cuid())
  userId    String
  email     String
  otpHash   String
  sentFor   String
  expiresAt DateTime
  createdAt DateTime @default(now())
  verified  Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([email])
  @@index([userId])
  @@index([sentFor])
}

model Logs {
  id        String   @id @default(cuid())
  userId    String
  action    String
  level     level
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [userId])

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model ProfileView {
  id           String   @id @default(cuid())
  profileId    String
  viewerUserId String
  viewerEmail  String
  viewerName   String?
  createdAt    DateTime @default(now())
  profile      Profile  @relation(fields: [profileId], references: [id])

  @@unique([profileId, viewerUserId])
  @@index([profileId])
  @@index([viewerUserId])
  @@index([viewerEmail])
  @@index([createdAt])
}

model Organization {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique // URL-friendly unique identifier
  joinEnabled Boolean  @default(false)
  isPublic    Boolean  @default(true)
  timezone    String? // timezone for localized timestamps or scheduling
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userOrganizations     UserOrganization[]
  organizationRoles     OrganizationRole[]
  organizationUserRoles OrganizationUserRole[]
  inviteCodes           OrganizationInviteCode[]
  organizationAuditLogs OrganizationAuditLog[]
  organizationProfile   OrganizationProfile?
  teams                 Team[]

  @@index([name])
  @@index([slug])
  @@index([isPublic])
  @@index([joinEnabled])
}

model OrganizationUserRole {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  roleId         String
  assignedAt     DateTime @default(now())

  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role         OrganizationRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId, roleId]) // ensures unique role assignment per user per organization
  @@index([userId])
  @@index([organizationId])
  @@index([roleId])
}

model UserOrganization {
  userId         String
  organizationId String
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@id([userId, organizationId])
  @@index([organizationId])
}

model OrganizationRole {
  id             String   @id @default(cuid())
  organizationId String
  roleName       String   @unique
  permissions    Json // more structured permissions for flexibility
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization            Organization             @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationUserRoles   OrganizationUserRole[]
  organizationInviteCodes OrganizationInviteCode[]

  @@unique([organizationId, roleName]) // unique roles per organization
  @@index([organizationId])
}

model OrganizationInviteCode {
  id             String   @id @default(cuid())
  organizationId String
  code           String   @unique
  email          String
  roleId         String
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  createdBy      String
  used           Boolean  @default(false)

  organization Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role         OrganizationRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
}

model OrganizationProfile {
  id             String   @id @default(cuid())
  organizationId String   @unique
  description    String? // optional description of the organization
  website        String?
  logoUrl        String?
  bannerUrl      String?
  location       String? // geographic location of the organization
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model Team {
  id             String       @id @default(cuid())
  name           String
  slug           String // URL-friendly unique identifier
  joinEnabled    Boolean      @default(false)
  visibility     Visibility   @default(INTERNAL) // public/private/team-only visibility
  timezone       String? // timezone for localized timestamps or scheduling
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relations
  teamMemberships UserTeam[]
  teamRoles       TeamRole[]
  teamUserRoles   TeamUserRole[]
  inviteCodes     InviteCode[]
  teamAuditLogs   TeamAuditLog[]
  teamProfile     TeamProfile?
  projects        Project[] // example of linked projects/repos

  @@unique([organizationId, name])
  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([name])
  @@index([slug])
  @@index([visibility])
  @@index([joinEnabled])
}

model TeamProfile {
  id          String   @id @default(cuid())
  teamId      String   @unique
  description String? // optional description of the team/org
  website     String?
  logoUrl     String?
  bannerUrl   String?
  location    String? // geographic location of the team
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model InviteCode {
  id        String   @id @default(cuid())
  teamId    String
  code      String   @unique
  email     String
  roleId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  createdBy String

  team Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  role TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
}

model TeamRole {
  id          String   @id @default(cuid())
  teamId      String
  roleName    String   @unique
  permissions Json // more structured permissions for flexibility
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  team          Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamUserRoles TeamUserRole[]
  inviteCodes   InviteCode[]

  @@unique([teamId, roleName]) // unique roles per team
  @@index([teamId])
}

model ProjectRole {
  id          String   @id @default(cuid())
  projectId   String
  roleName    String   @unique
  permissions Json // more structured permissions for flexibility
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectUserRoles   ProjectUserRole[]
  projectInviteCodes ProjectInviteCode[]

  @@unique([projectId, roleName]) // unique roles per project
  @@index([projectId])
}

model TeamUserRole {
  id         String   @id @default(cuid())
  userId     String
  teamId     String
  roleId     String
  assignedAt DateTime @default(now())

  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  role TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId, roleId]) // ensures unique role assignment per user per team
  @@index([userId])
  @@index([teamId])
  @@index([roleId])
}

model UserTeam {
  userId    String
  teamId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
  @@index([teamId])
}

model ProjectUserRole {
  id         String   @id @default(cuid())
  userId     String
  projectId  String
  roleId     String
  assignedAt DateTime @default(now())

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role    ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId, roleId]) // ensures unique role assignment per user per project
  @@index([userId])
  @@index([projectId])
  @@index([roleId])
}

model UserProject {
  userId    String
  projectId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([userId, projectId])
  @@index([projectId])
}

model Project {
  id                 String              @id @default(cuid())
  teamId             String
  projectMemberships UserProject[]
  name               String
  slug               String? // optional URL-friendly identifier
  projectProfile     projectProfile?
  joinEnabled        Boolean             @default(false)
  visibility         Visibility          @default(INTERNAL)
  projectRoles       ProjectRole[]
  projectUserRoles   ProjectUserRole[]
  inviteCodes        ProjectInviteCode[]
  projectAuditLogs   ProjectAuditLog[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdBy          String
  updatedBy          String

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([teamId, name])
  @@unique([teamId, slug])
  @@index([teamId])
  @@index([visibility])
  @@index([joinEnabled])
}

model projectProfile {
  id          String   @id @default(cuid())
  projectId   String   @unique
  description String? // optional description of the project
  website     String?
  logoUrl     String?
  bannerUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectInviteCode {
  id        String   @id @default(cuid())
  projectId String
  email     String? // optional: invite by email, if null the code is generic
  code      String   @unique
  roleId    String // optional role assignment when accepted
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  createdBy String // userId who created the invite

  project Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role    ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
}

model OrganizationAuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  action         String
  level          level
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model TeamAuditLog {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model ProjectAuditLog {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model Report {
  id               String      @id @default(cuid())
  reporterId       String
  reportedEntityId String
  entityType       String
  reason           String
  details          String?
  state            ReportState @default(QUEUED)
  createdAt        DateTime    @default(now())

  reporter User @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  @@index([reporterId])
  @@index([reportedEntityId, entityType])
  @@index([createdAt])
}

enum Visibility {
  PUBLIC
  PRIVATE
  INTERNAL
}

enum gender {
  MALE
  FEMALE
  OTHER
}

enum level {
  INFO
  WARN
  CRITICAL
}

enum ReportState {
  QUEUED
  IN_REVIEW
  RESOLVED
  DISMISSED
}
