generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                  @id @default(cuid())
  userId                String                  @unique
  email                 String                  @unique
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  Logs                  Logs[]
  organizationFollowers OrganizationFollowers[]
  organizationStars     OrganizationStars[]
  OrganizationUserRole  OrganizationUserRole[]
  otps                  Otp[]
  profile               Profile?
  profileStars          ProfileStars[]
  projectUserRoles      ProjectUserRole[]
  reports               Report[]
  teamUserRoles         TeamUserRole[]
  userOrganizations     UserOrganization[]
  projectMemberships    UserProject[]
  teamMemberships       UserTeam[]

  @@index([userId])
}

model Profile {
  id                String         @id @default(cuid())
  userId            String         @unique
  firstName         String?
  lastName          String?
  bio               String         @db.VarChar(500)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  company           String?
  dateOfBirth       DateTime?
  education         String[]
  gender            gender?
  githubUsername    String?
  interests         String[]
  isPublic          Boolean        @default(false)
  jobTitle          String?
  languages         String[]
  linkedInProfile   String?
  location          String?
  phoneNumber       String?
  portfolioUrl      String?
  requireAuth       Boolean        @default(false)
  resumeUrl         String?
  skills            String[]
  trackViews        Boolean        @default(false)
  twitterHandle     String?
  yearsOfExperience Int?
  awards            String[]
  certifications    String[]
  experiences       String[]
  user              User           @relation(fields: [userId], references: [userId], onDelete: Cascade)
  profileStars      ProfileStars[]
  profileViews      ProfileView[]

  @@index([userId])
  @@index([isPublic])
}

model Otp {
  id        String   @id @default(cuid())
  userId    String
  email     String
  otpHash   String
  sentFor   String
  expiresAt DateTime
  createdAt DateTime @default(now())
  verified  Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([email])
  @@index([userId])
  @@index([sentFor])
}

model Logs {
  id        String   @id @default(cuid())
  userId    String
  action    String
  level     level
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [userId])

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model ProfileView {
  id           String   @id @default(cuid())
  profileId    String
  viewerUserId String
  viewerEmail  String
  viewerName   String?
  createdAt    DateTime @default(now())
  profile      Profile  @relation(fields: [profileId], references: [id])

  @@unique([profileId, viewerUserId])
  @@index([profileId])
  @@index([viewerUserId])
  @@index([viewerEmail])
  @@index([createdAt])
}

model Organization {
  id                    String                   @id @default(cuid())
  name                  String                   @unique
  slug                  String                   @unique
  joinEnabled           Boolean                  @default(false)
  isPublic              Boolean                  @default(true)
  timezone              String?
  createdAt             DateTime                 @default(now())
  updatedAt             DateTime                 @updatedAt
  organizationAuditLogs OrganizationAuditLog[]
  organizationFollowers OrganizationFollowers[]
  inviteCodes           OrganizationInviteCode[]
  organizationProfile   OrganizationProfile?
  organizationRoles     OrganizationRole[]
  organizationStars     OrganizationStars[]
  organizationUserRoles OrganizationUserRole[]
  teams                 Team[]
  userOrganizations     UserOrganization[]

  @@index([name])
  @@index([slug])
  @@index([isPublic])
  @@index([joinEnabled])
}

model OrganizationUserRole {
  id             String           @id @default(cuid())
  userId         String
  organizationId String
  roleId         String
  assignedAt     DateTime         @default(now())
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           OrganizationRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId, roleId])
  @@index([userId])
  @@index([organizationId])
  @@index([roleId])
}

model UserOrganization {
  userId         String
  organizationId String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, organizationId])
  @@index([organizationId])
}

model OrganizationRole {
  id                      String                   @id @default(cuid())
  organizationId          String
  roleName                String                   @unique
  permissions             Json
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  organizationInviteCodes OrganizationInviteCode[]
  organization            Organization             @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationUserRoles   OrganizationUserRole[]

  @@unique([organizationId, roleName])
  @@index([organizationId])
}

model OrganizationInviteCode {
  id             String           @id @default(cuid())
  organizationId String
  code           String           @unique
  expiresAt      DateTime
  createdAt      DateTime         @default(now())
  createdBy      String
  email          String
  roleId         String
  used           Boolean          @default(false)
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           OrganizationRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
}

model OrganizationProfile {
  id             String       @id @default(cuid())
  organizationId String       @unique
  description    String?
  website        String?
  logoUrl        String?
  bannerUrl      String?
  location       String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model Team {
  id              String         @id @default(cuid())
  name            String
  slug            String
  joinEnabled     Boolean        @default(false)
  visibility      Visibility     @default(INTERNAL)
  timezone        String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  organizationId  String
  inviteCodes     InviteCode[]
  projects        Project[]
  organization    Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  teamAuditLogs   TeamAuditLog[]
  teamProfile     TeamProfile?
  teamRoles       TeamRole[]
  teamUserRoles   TeamUserRole[]
  teamMemberships UserTeam[]

  @@unique([organizationId, name])
  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([name])
  @@index([slug])
  @@index([visibility])
  @@index([joinEnabled])
}

model TeamProfile {
  id          String   @id @default(cuid())
  teamId      String   @unique
  description String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model InviteCode {
  id        String   @id @default(cuid())
  teamId    String
  code      String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  createdBy String
  email     String
  roleId    String
  used      Boolean  @default(false)
  role      TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
}

model TeamRole {
  id            String         @id @default(cuid())
  teamId        String
  roleName      String         @unique
  permissions   Json
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  inviteCodes   InviteCode[]
  team          Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamUserRoles TeamUserRole[]

  @@unique([teamId, roleName])
  @@index([teamId])
}

model ProjectRole {
  id                 String              @id @default(cuid())
  projectId          String
  roleName           String              @unique
  permissions        Json
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  projectInviteCodes ProjectInviteCode[]
  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectUserRoles   ProjectUserRole[]

  @@unique([projectId, roleName])
  @@index([projectId])
}

model TeamUserRole {
  id         String   @id @default(cuid())
  userId     String
  teamId     String
  roleId     String
  assignedAt DateTime @default(now())
  role       TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  team       Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId, roleId])
  @@index([userId])
  @@index([teamId])
  @@index([roleId])
}

model UserTeam {
  userId    String
  teamId    String
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
  @@index([teamId])
}

model ProjectUserRole {
  id         String      @id @default(cuid())
  userId     String
  projectId  String
  roleId     String
  assignedAt DateTime    @default(now())
  project    Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role       ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId, roleId])
  @@index([userId])
  @@index([projectId])
  @@index([roleId])
}

model UserProject {
  userId    String
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, projectId])
  @@index([projectId])
}

model Project {
  id                 String              @id @default(cuid())
  teamId             String
  name               String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdBy          String
  updatedBy          String
  visibility         Visibility          @default(INTERNAL)
  joinEnabled        Boolean             @default(false)
  slug               String?
  team               Team                @relation(fields: [teamId], references: [id], onDelete: Cascade)
  projectAuditLogs   ProjectAuditLog[]
  inviteCodes        ProjectInviteCode[]
  projectRoles       ProjectRole[]
  projectUserRoles   ProjectUserRole[]
  projectMemberships UserProject[]
  projectProfile     projectProfile?

  @@unique([teamId, name])
  @@unique([teamId, slug])
  @@index([teamId])
  @@index([visibility])
  @@index([joinEnabled])
}

model projectProfile {
  id          String   @id @default(cuid())
  projectId   String   @unique
  description String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectInviteCode {
  id        String      @id @default(cuid())
  projectId String
  email     String?
  code      String      @unique
  roleId    String
  expiresAt DateTime
  used      Boolean     @default(false)
  createdAt DateTime    @default(now())
  createdBy String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role      ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
}

model OrganizationAuditLog {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  action         String
  level          level
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model TeamAuditLog {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model ProjectAuditLog {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model Report {
  id               String      @id @default(cuid())
  reporterId       String
  reportedEntityId String
  entityType       String
  reason           String
  details          String?
  createdAt        DateTime    @default(now())
  state            ReportState @default(QUEUED)
  reporter         User        @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  @@index([reporterId])
  @@index([reportedEntityId, entityType])
  @@index([createdAt])
}

model ProfileStars {
  id        String   @id @default(cuid())
  profileId String
  userId    String
  createdAt DateTime @default(now())
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([profileId, userId])
  @@index([profileId, userId])
}

model OrganizationFollowers {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId, organizationId])
}

model OrganizationStars {
  id             String       @id @default(cuid())
  organizationId String
  userId         String
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId, organizationId])
}

enum Visibility {
  PUBLIC
  PRIVATE
  INTERNAL
}

enum gender {
  MALE
  FEMALE
  OTHER
}

enum level {
  INFO
  WARN
  CRITICAL
}

enum ReportState {
  QUEUED
  IN_REVIEW
  RESOLVED
  DISMISSED
}
