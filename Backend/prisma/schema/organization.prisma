model Project {
  id                 String              @id @default(cuid())
  teamId             String
  name               String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  createdBy          String
  updatedBy          String
  visibility         Visibility          @default(INTERNAL)
  joinEnabled        Boolean             @default(false)
  slug               String?
  deletedAt          DateTime?
  isDeleted          Boolean             @default(false)
  team               Team                @relation(fields: [teamId], references: [id], onDelete: Cascade)
  projectAuditLogs   ProjectAuditLog[]
  inviteCodes        ProjectInviteCode[]
  projectRoles       ProjectRole[]
  projectUserRoles   ProjectUserRole[]
  projectMemberships UserProject[]
  projectProfile     projectProfile?

  @@unique([teamId, name])
  @@unique([teamId, slug])
  @@index([teamId])
  @@index([name])
  @@index([slug])
  @@index([visibility])
  @@index([joinEnabled])
  @@index([createdAt])
  @@index([teamId, visibility])
}

model projectProfile {
  id          String   @id @default(cuid())
  projectId   String   @unique
  description String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model ProjectRole {
  id                 String              @id @default(cuid())
  projectId          String
  roleName           String
  permissions        Json
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  projectInviteCodes ProjectInviteCode[]
  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectUserRoles   ProjectUserRole[]

  @@unique([projectId, roleName])
  @@index([projectId])
  @@index([roleName])
}

model ProjectUserRole {
  id         String      @id @default(cuid())
  userId     String
  projectId  String
  roleId     String
  assignedAt DateTime    @default(now())
  project    Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role       ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([userId, projectId, roleId])
  @@index([userId])
  @@index([projectId])
  @@index([roleId])
  @@index([projectId, userId])
}

model UserProject {
  userId    String
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, projectId])
  @@index([projectId])
  @@index([createdAt])
}

model ProjectInviteCode {
  id        String      @id @default(cuid())
  projectId String
  email     String?
  code      String      @unique
  roleId    String
  expiresAt DateTime
  used      Boolean     @default(false)
  createdAt DateTime    @default(now())
  createdBy String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role      ProjectRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([code])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
  @@index([projectId, used, expiresAt])
}

model ProjectAuditLog {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])

  @@index([projectId])
  @@index([userId])
  @@index([action])
  @@index([level])
  @@index([createdAt])
  @@index([projectId, createdAt])
  @@index([projectId, userId, createdAt])
}

model OrganizationSSOConfig {
  id              String       @id @default(cuid())
  organizationId  String       @unique
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  domain          String?      @unique
  providerType    String       @default("oidc") // oidc, saml

  // OIDC Config
  issuerUrl       String?
  authorizationUrl String?
  tokenUrl        String?
  userInfoUrl     String?
  clientId        String?
  clientSecret    String?

  // SCIM Config
  scimEnabled     Boolean      @default(false)
  scimToken       String?

  isActive        Boolean      @default(false)

  // Domain Verification
  domainVerified              Boolean   @default(false)
  domainVerificationToken     String?
  domainVerificationAttempts  Int       @default(0)
  domainVerifiedAt            DateTime?
  domainVerificationExpiresAt DateTime?

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([domain])
  @@index([isActive])
  @@index([domainVerified])
}
