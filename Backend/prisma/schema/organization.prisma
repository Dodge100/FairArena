model Team {
  id              String         @id @default(cuid())
  name            String
  slug            String
  joinEnabled     Boolean        @default(false)
  visibility      Visibility     @default(INTERNAL)
  timezone        String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  organizationId  String
  deletedAt       DateTime?
  isDeleted       Boolean        @default(false)
  inviteCodes     InviteCode[]
  projects        Project[]
  organization    Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  teamAuditLogs   TeamAuditLog[]
  teamProfile     TeamProfile?
  teamRoles       TeamRole[]
  teamUserRoles   TeamUserRole[]
  teamMemberships UserTeam[]

  @@unique([organizationId, name])
  @@unique([organizationId, slug])
  @@index([organizationId])
  @@index([name])
  @@index([slug])
  @@index([visibility])
  @@index([joinEnabled])
  @@index([createdAt])
  @@index([organizationId, visibility])
}

model TeamProfile {
  id          String   @id @default(cuid())
  teamId      String   @unique
  description String?
  website     String?
  logoUrl     String?
  bannerUrl   String?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  team        Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
}

model InviteCode {
  id        String   @id @default(cuid())
  teamId    String
  code      String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  createdBy String
  email     String
  roleId    String
  used      Boolean  @default(false)
  role      TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([code])
  @@index([expiresAt])
  @@index([email])
  @@index([used])
  @@index([roleId])
  @@index([teamId, used, expiresAt])
}

model TeamRole {
  id            String         @id @default(cuid())
  teamId        String
  roleName      String
  permissions   Json
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  inviteCodes   InviteCode[]
  team          Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamUserRoles TeamUserRole[]

  @@unique([teamId, roleName])
  @@index([teamId])
  @@index([roleName])
}

model TeamUserRole {
  id         String   @id @default(cuid())
  userId     String
  teamId     String
  roleId     String
  assignedAt DateTime @default(now())
  role       TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  team       Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([userId, teamId, roleId])
  @@index([userId])
  @@index([teamId])
  @@index([roleId])
  @@index([teamId, userId])
}

model UserTeam {
  userId    String
  teamId    String
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id([userId, teamId])
  @@index([teamId])
  @@index([createdAt])
}

model TeamAuditLog {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  action    String
  level     level
  createdAt DateTime @default(now())
  team      Team     @relation(fields: [teamId], references: [id])

  @@index([teamId])
  @@index([userId])
  @@index([action])
  @@index([level])
  @@index([createdAt])
  @@index([teamId, createdAt])
  @@index([teamId, userId, createdAt])
